@{
    ViewBag.Title = "Лента заказов";
}

<div ng-app="OrdersApp">

    <h2>Заказы</h2>
    <div ng-controller="OrdersController">
        <table class="table">
            <tr ng-repeat="order in orders | orderBy : 'OrderDate' : true ">
                <td>{{ order.OrderDate | date:"HH.mm dd.MM.yyyy"}} {{ order.ClientName }} заказал покемона уже {{ order.OrderNumber }} раз.</td>
            </tr>
        </table>
    </div>
</div>

@section scripts
{
    <script src="~/Scripts/Angular/angular.js"></script>
    <script src="~/Scripts/jquery.signalR-2.2.1.js"></script>
    <script src="~/signalr/hubs"></script>
    <script src="~/Scripts/MyScripts/OrdersNg.js"></script>
}
